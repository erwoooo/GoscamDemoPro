<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/normal"
        android:id="@+id/tv_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <RadioButton
        app:layout_constraintBottom_toBottomOf="@id/tv_normal"
        app:layout_constraintTop_toTopOf="@id/tv_normal"
        app:layout_constraintEnd_toEndOf="@id/tv_normal"
        android:id="@+id/radio_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/horizontal_flip"
        android:id="@+id/tv_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_normal"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <RadioButton
        app:layout_constraintBottom_toBottomOf="@id/tv_horizontal"
        app:layout_constraintTop_toTopOf="@id/tv_horizontal"
        app:layout_constraintEnd_toEndOf="@id/tv_horizontal"
        android:id="@+id/radio_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/vertical_flip"
        android:id="@+id/tv_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <RadioButton
        app:layout_constraintBottom_toBottomOf="@id/tv_vertical"
        app:layout_constraintTop_toTopOf="@id/tv_vertical"
        app:layout_constraintEnd_toEndOf="@id/tv_vertical"
        android:id="@+id/radio_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/_180_flip"
        android:id="@+id/tv_180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <RadioButton
        app:layout_constraintBottom_toBottomOf="@id/tv_180"
        app:layout_constraintTop_toTopOf="@id/tv_180"
        app:layout_constraintEnd_toEndOf="@id/tv_180"
        android:id="@+id/radio_180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>