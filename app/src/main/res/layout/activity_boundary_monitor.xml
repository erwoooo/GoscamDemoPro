<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/w_30px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gocam.goscamdemopro.utils.ItemViewForSetting
                    android:id="@+id/siv_move_switch"
                    style="@style/dev_setting_main_"
                    app:i_left_txt="@string/string_boundary"
                    app:i_right_image_show="false"
                    app:i_switch_btn_show="true"/>

                <com.gocam.goscamdemopro.utils.ItemViewForSetting
                    android:id="@+id/item_sensitivity"
                    style="@style/dev_setting_main_"
                    app:i_left_txt="@string/detection_sensitivity"
                    app:i_right_image="@mipmap/icon_more"
                    app:i_right_txt="@string/string_support_off"
                    app:i_right_txt_show="true"
                    app:i_top_line="true" />

                <com.gocam.goscamdemopro.utils.ItemViewForSetting
                    android:id="@+id/item_detection_time"
                    style="@style/dev_setting_main_"
                    app:i_left_txt="@string/string_detection_time"
                    app:i_right_image="@mipmap/icon_more"
                    app:i_right_txt="@string/string_support_off"
                    app:i_right_txt_show="true"
                    app:i_top_line="true" />

                <com.gocam.goscamdemopro.utils.ItemViewForSetting
                    android:id="@+id/item_boundary_switch"
                    style="@style/dev_setting_main_"
                    app:i_left_txt="@string/string_visible_boundary"
                    app:i_right_image_show="false"
                    app:i_switch_btn_show="true"
                    app:i_top_line="true"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:layout_marginStart="@dimen/w_36px"
                    android:layout_marginEnd="@dimen/w_36px"
                    android:background="@drawable/slt_setting_item_bg">

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.gocam.goscamdemopro.view.PointInPathView
                        android:id="@+id/pipv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_select_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/main_button_selector_8"
                        android:text="@string/string_reset"
                        android:textColor="@color/color_main_add_txt" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="@dimen/w_36px"
                        android:background="@drawable/main_button_selector"
                        android:text="@string/save"
                        android:textColor="@color/color_main_add_txt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_move_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/string_boundary_toast"
                    android:textColor="@color/_2e2e2e"
                    android:textSize="@dimen/w_24px"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
