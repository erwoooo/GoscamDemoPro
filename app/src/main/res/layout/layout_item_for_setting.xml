<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_bt_dev_setting"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_centerVertical="true"
    android:background="@drawable/slt_setting_item_bg"
    android:clickable="false">
    <View
        android:id="@+id/view_top_line"
        android:visibility="invisible"
        style="@style/main_ver_line_style"/>
    <View
        android:id="@+id/view_bottom_line"
        android:visibility="invisible"
        style="@style/main_ver_line_style"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/view_top_line"
        android:layout_above="@id/view_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingStart="15dp">

        <ImageView
            android:id="@+id/iv_left_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/textColor" />
            <View
                android:id="@+id/view_version_tag"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center|top"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:visibility="gone"
                android:background="@drawable/shape_record_rec" />
        </LinearLayout>

        <com.gocam.goscamdemopro.utils.LSwitchButton
            android:id="@+id/lsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            app:sb_show_indicator="false"
            app:sb_checked_color="@color/_3CCF9B"/>

        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            android:textColor="@color/textHintColor" />

        <View
            android:id="@+id/iv_right_pic_2"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/_3CCF96"
            android:visibility="gone"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/iv_right_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp" />
    </LinearLayout>
</RelativeLayout>