<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/layout_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_20px"
            android:layout_marginStart="@dimen/w_50px"
            android:layout_marginEnd="@dimen/w_50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_activity_status"
                android:textSize="14sp"
                android:textColor="@color/text2"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/w_20px"
                android:textSize="14sp"
                android:textColor="@color/text2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_20px"
            android:layout_marginStart="@dimen/w_50px"
            android:layout_marginEnd="@dimen/w_50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_all_sleep"
                android:textSize="14sp"
                android:textColor="@color/text2"/>

            <TextView
                android:id="@+id/tv_all_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/w_20px"
                android:textSize="14sp"
                android:textColor="@color/text2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_20px"
            android:layout_marginStart="@dimen/w_50px"
            android:layout_marginEnd="@dimen/w_50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_max_sleep"
                android:textSize="14sp"
                android:textColor="@color/text2"/>

            <TextView
                android:id="@+id/tv_max_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/w_20px"
                android:textSize="14sp"
                android:textColor="@color/text2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_20px"
            android:layout_marginStart="@dimen/w_50px"
            android:layout_marginEnd="@dimen/w_50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_cry_count"
                android:textSize="14sp"
                android:textColor="@color/text2"/>

            <TextView
                android:id="@+id/tv_cry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/w_20px"
                android:textSize="14sp"
                android:textColor="@color/text2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_20px"
            android:layout_marginStart="@dimen/w_50px"
            android:layout_marginEnd="@dimen/w_50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_activity_count"
                android:textSize="14sp"
                android:textColor="@color/text2"/>

            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/w_20px"
                android:textSize="14sp"
                android:textColor="@color/text2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_20px"
            android:layout_marginStart="@dimen/w_50px"
            android:layout_marginEnd="@dimen/w_50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_sleep_record"
                android:textSize="14sp"
                android:textColor="@color/text2"/>

            <TextView
                android:id="@+id/tv_sleep_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/w_20px"
                android:textSize="14sp"
                android:textColor="@color/text2"/>
        </LinearLayout>
    </LinearLayout>
</layout>