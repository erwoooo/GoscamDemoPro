<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_selectCountry"
    android:background="@drawable/shape_coner_bg_l_r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_0F0F0F"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="2"/>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/_3CCF96"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/w_40px"
        app:constraint_referenced_ids="tv_cancel,tv_title,tv_ok"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/w_200px"
        android:layout_marginBottom="@dimen/w_200px"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/flow_title"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_10px"
            android:paddingStart="@dimen/w_30px"
            android:paddingEnd="@dimen/w_10px"
            android:paddingTop="@dimen/w_30px"
            android:paddingBottom="@dimen/w_30px"
            android:src="@mipmap/music_icon_volume_reduce"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_audio_set"
                android:layout_width="@dimen/w_50px"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:text="0"
                android:gravity="center"
                android:singleLine="true" />
            <SeekBar
                android:id="@+id/sb_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/bg_bar_1"
                android:layout_marginStart="@dimen/w_30px"
                android:layout_marginEnd="@dimen/w_30px"
                android:layout_marginTop="10dp"
                android:thumb="@drawable/music_thumb_bg"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_10px"
            android:paddingStart="@dimen/w_10px"
            android:paddingEnd="@dimen/w_30px"
            android:paddingTop="@dimen/w_30px"
            android:paddingBottom="@dimen/w_30px"
            android:src="@mipmap/music_icon_volume_plus"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>