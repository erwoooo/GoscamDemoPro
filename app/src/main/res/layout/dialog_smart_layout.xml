<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/full_color_night_vision"
            android:id="@+id/tv_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <RadioButton
            app:layout_constraintBottom_toBottomOf="@id/tv_color"
            app:layout_constraintTop_toTopOf="@id/tv_color"
            app:layout_constraintEnd_toEndOf="@id/tv_color"
            android:id="@+id/radio_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/black_and_white_night_vision"
            android:id="@+id/tv_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <RadioButton
            app:layout_constraintBottom_toBottomOf="@id/tv_black"
            app:layout_constraintTop_toTopOf="@id/tv_black"
            app:layout_constraintEnd_toEndOf="@id/tv_black"
            android:id="@+id/radio_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/smart_night_vision"
            android:id="@+id/tv_smart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_black"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <RadioButton
            app:layout_constraintBottom_toBottomOf="@id/tv_smart"
            app:layout_constraintTop_toTopOf="@id/tv_smart"
            app:layout_constraintEnd_toEndOf="@id/tv_smart"
            android:id="@+id/radio_smart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>