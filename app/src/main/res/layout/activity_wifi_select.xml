<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <include layout="@layout/layout_toolbar" android:id="@+id/tool_bar" />

        <EditText
            android:id="@+id/et_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:digits="@string/account_input_format"
            android:ellipsize="end"
            android:text="T001"
            android:hint="@string/enter_wifi_ssid"
            android:maxLength="81"
            android:singleLine="false"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start|center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="a12345678"
            android:hint="@string/enter_wifi_psw"
            android:maxLength="20"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_ipc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/main_button_selector"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@string/add_ipc"
            android:textColor="#fff" />

        <Button
            android:visibility="visible"
            android:id="@+id/btn_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_button_selector"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@string/scan_dev_info_title"
            android:textColor="#fff" />

        <Button
            android:visibility="visible"
            android:id="@+id/btn_scan_ble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_button_selector"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@string/scan_ble"
            android:textColor="#fff" />

        <Button
            android:visibility="visible"
            android:id="@+id/btn_add_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_button_selector"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@string/btn_add_photo"
            android:textColor="#fff" />

    </LinearLayout>
</layout>