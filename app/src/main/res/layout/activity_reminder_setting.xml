<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/tb_top"
            layout="@layout/layout_toolbar"/>

        <com.gocam.goscamdemopro.utils.ItemViewForSetting
            android:id="@+id/alarm_reminder"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:i_left_txt="@string/string_alarm_reminder"
            app:i_switch_btn_show="true"/>

        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingBottom="22dp"
            android:textColor="@color/_999999"
            android:textSize="12sp"
            android:text="@string/string_alarm_reminder_toast"
            android:background="@drawable/slt_setting_item_bg"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/fl_reminder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:constraint_referenced_ids="alarm_reminder,tv_alarm"
            app:layout_constraintTop_toBottomOf="@+id/tb_top"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.gocam.goscamdemopro.utils.ItemViewForSetting
            android:id="@+id/alarm_volume"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:i_left_txt="@string/string_alarm_volume"
            app:i_right_txt_show="true"
            app:i_right_image_show="true"
            app:i_top_line="true"
            app:i_right_image="@mipmap/icon_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_reminder"/>

        <com.gocam.goscamdemopro.utils.ItemViewForSetting
            android:id="@+id/reminder_duration"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:i_left_txt="@string/string_reminder_duration"
            app:i_right_txt_show="true"
            app:i_right_image_show="true"
            app:i_top_line="true"
            app:i_right_image="@mipmap/icon_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarm_volume"/>

        <com.gocam.goscamdemopro.utils.ItemViewForSetting
            android:id="@+id/working_hours"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:i_left_txt="@string/string_working_hours"
            app:i_right_txt_show="true"
            app:i_right_image_show="true"
            app:i_top_line="true"
            app:i_right_image="@mipmap/icon_more"/>

        <TextView
            android:id="@+id/tv_time_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="22dp"
            android:textColor="@color/_999999"
            android:textSize="12sp"
            android:text="@string/string_working_hours_toast"
            android:background="@drawable/slt_setting_item_bg"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/fl_working_hours"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:constraint_referenced_ids="working_hours,tv_time_slot"
            app:layout_constraintTop_toBottomOf="@+id/reminder_duration"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.gocam.goscamdemopro.utils.ItemViewForSetting
            android:id="@+id/reminder_mode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:i_left_txt="@string/string_reminder_mode"
            app:i_right_image_show="true"
            app:i_top_line="true"
            app:i_right_image="@mipmap/icon_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_working_hours"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="44dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/string_delete_reminder"
            android:textSize="18sp"
            android:textColor="@color/color_FEFEFE"
            android:gravity="center"
            android:background="@drawable/main_button_selector_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>